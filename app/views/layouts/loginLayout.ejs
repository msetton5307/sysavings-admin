    <script>
        $(window).on('load', function() {
            if (feather) {
                feather.replace({
                    width: 14,
                    height: 14
                });
            }
        })

        if(window.navigator && navigator.serviceWorker) {
            navigator.serviceWorker.getRegistrations()
            .then(function(registrations) {
                for(let registration of registrations) {
                    registration.unregister();
                }
            });
        }

        $("#forgetpasswordButton").on("click", function () {
            $("#signin-section").css("display", "none");
            $("#signup-form-admin").css("display", "none");
            $("#forget-password-admin").css("display", "");
        });
        $("#signinButton").on("click", function () {
            $("#signin-section").css("display", "");
            $("#signup-form-admin").css("display", "none");
            $("#forget-password-admin").css("display", "none");
        });
        $("#loginButton").on("click", function () {
            $("#signin-section").css("display", "");
            $("#signup-form-admin").css("display", "none");
            $("#forget-password-admin").css("display", "none");
        });
        $("#signupButton").on("click", function () {
            $("#signin-section").css("display", "none");
            $("#signup-form-admin").css("display", "");
            $("#forget-password-admin").css("display", "none");
        });

        $('#admin_login_form').submit(function () {
            let cb = document.querySelector('#remember-me');
            if (cb.checked) {
                let email = document.querySelector('#login-email');
                let password = document.querySelector('#login-password');
                if (email.value && password.value) {
                    localStorage.setItem("<%= project_name %>".replace(/\s/gi, '') + '_login_email', email.value);
                    localStorage.setItem("<%= project_name %>".replace(/\s/gi, '') + '_login_password', password.value);
                    localStorage.setItem("<%= project_name %>".replace(/\s/gi, '') + '_remember_me', true);
                }
            } else {
                localStorage.setItem("<%= project_name %>".replace(/\s/gi, '') + '_login_email', '');
                localStorage.setItem("<%= project_name %>".replace(/\s/gi, '') + '_login_password', '');
                localStorage.setItem("<%= project_name %>".replace(/\s/gi, '') + '_remember_me', '');
            }
        });

        $(document).ready(function () {
            let email = localStorage.getItem("<%= project_name %>".replace(/\s/gi, '') + '_login_email');
            let password = localStorage.getItem("<%= project_name %>".replace(/\s/gi, '') + '_login_password');
            let remember_me = localStorage.getItem("<%= project_name %>".replace(/\s/gi, '') + '_remember_me');
            $('#login-email').val(email);
            $('#login-password').val(password);
            $('#remember-me').prop('checked', remember_me);
        });
    </script>
