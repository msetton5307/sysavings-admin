<% layout(layout_directory+'/mainLayout') -%>

<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h2 class="content-header-title float-start mb-0">Post Deal</h2>
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="<%= generateUrl('user.dashboard') %>">Dashboard</a>
                                </li>
                                <li class="breadcrumb-item"><a href="<%= generateUrl('admin.deal.listing')%>">Deals</a>
                                </li>
                                <li class="breadcrumb-item active"> <%= page_title %>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <div class="row">
                <div class="col-12">
                    <div class="card">
                        <div class="card-body py-2">
                            <form class="modal-content pt-0" action="<%= generateUrl('deal.post.submit') %>" method="POST">
                                <div class="modal-header mb-1">
                                    <h5 class="modal-title" id="postDealLabel">Amazon Deal Link</h5>
                                </div>
                                <div class="modal-body flex-grow-1">
                                    <div class="mb-1">
                                        <label class="form-label" for="amazonUrl">Amazon product link</label>
                                        <span style="color: red;">*</span>
                                        <input type="url" class="form-control" id="amazonUrl" name="amazonUrl" placeholder="https://www.amazon.com/dp/XXXXXXXXXX" required />
                                        <% if (errorMessage) { %>
                                            <div class="text-danger mt-50"><%= errorMessage %></div>
                                        <% } %>
                                    </div>
                                    <div class="d-flex mb-2">
                                        <button type="submit" class="btn btn-primary me-1">Fetch Deal</button>
                                        <a class="btn btn-outline-secondary" href="<%= generateUrl('admin.deal.listing')%>">Back to deals</a>
                                    </div>
                                    <% if (dealInfo) { %>
                                        <div class="alert alert-success" role="alert">
                                            Webhook payload prepared and logged to the server console.
                                        </div>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <h5>Deal Summary</h5>
                                                <ul class="list-unstyled">
                                                    <li><strong>ASIN:</strong> <%= dealInfo.id %></li>
                                                    <li><strong>Title:</strong> <%= dealInfo.Name || 'Unavailable' %></li>
                                                    <li><strong>Price 1:</strong> <%= dealInfo.Price1 || 'Unavailable' %></li>
                                                    <li><strong>Price 2:</strong> <%= dealInfo.Price2 || 'Unavailable' %></li>
                                                    <li><strong>Percent Off:</strong> <%= dealInfo.Off || 'Unavailable' %></li>
                                                    <li><strong>URL:</strong> <a href="<%= dealInfo.Url %>" target="_blank" rel="noopener">Open product</a></li>
                                                    <li><strong>Created At:</strong> <%= dealInfo.createdAt %></li>
                                                </ul>
                                            </div>
                                            <div class="col-md-6">
                                                <% if (dealInfo.Image) { %>
                                                    <img src="<%= dealInfo.Image %>" alt="Product image" class="img-fluid rounded" />
                                                <% } else { %>
                                                    <div class="text-muted">No image available from Amazon preview.</div>
                                                <% } %>
                                            </div>
                                            <div class="col-12 mt-2">
                                                <h6>Webhook JSON preview</h6>
                                                <pre class="bg-light p-1 border"><%= JSON.stringify(dealInfo, null, 2) %></pre>
                                            </div>
                                        </div>
                                    <% } %>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
