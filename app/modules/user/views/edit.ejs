<% layout(layout_directory+'/mainLayout') -%>

<div class="app-content content ">
    <div class="content-overlay"></div>
    <div class="header-navbar-shadow"></div>
    <div class="content-wrapper container-xxl p-0">
        <div class="content-header row">
            <div class="content-header-left col-md-9 col-12 mb-2">
                <div class="row breadcrumbs-top">
                    <div class="col-12">
                        <h2 class="content-header-title float-start mb-0">User Edit</h2>
                        <div class="breadcrumb-wrapper">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="<%= generateUrl('user.dashboard') %>">Dashboard</a>
                                </li>
                                <li class="breadcrumb-item"><a href="<%= generateUrl('admin.user.listing')%>">Users</a>
                                </li>
                                <li class="breadcrumb-item active"> <%= page_title %>
                                </li>
                            </ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="content-body">
            <div class="row">
                <div class="col-12">
                  

                    <div class="card">
                        <!-- <div class="card-header border-bottom">
                            <h4 class="card-title"></h4>
                        </div> -->


                        <div class="card-body py-2">
                            <!-- form -->
                            <form class="edit-user-modal-form modal-content pt-0" id="editUserForm" action="<%= generateUrl('user.update') %>" method="POST" enctype='multipart/form-data'>
                             
                                <div class="modal-header mb-1">
                                    <h5 class="modal-title" id="exampleModalLabel">Edit User</h5>
                                </div>
                                <div class="modal-body flex-grow-1">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <label class="form-label" for="basic-icon-default-fullName">Full Name</label><span
                                            style="color: red;">*</span>
                                            <input value="<%=response.fullName%>" type="text" class="form-control dt-full-name" id="fullName" placeholder="Full Name" name="fullName" />
                                        </div>
                                        <div class="col-lg-6">
                                            <label class="form-label" for="basic-icon-default-userName">User Name</label><span
                                            style="color: red;">*</span>
                                            <input value="<%=response.userName%>"  autocomplete="off" type="text" id="basic-icon-default-userName" class="form-control dt-userName" placeholder="User Name" name="userName" />
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <label class="form-label" for="basic-icon-default-dob">Date of birth </label><span
                                            style="color: red;">*</span>
                                            <input value="<%=response.dob%>" type="date" id="basic-icon-default-dob"  class="form-control dt-dob" placeholder="dob No" name="dob" />
                                        </div>
                                        <div class="col-lg-6">
                                            <label class="form-label" for="basic-icon-default-email">Email</label><span
                                            style="color: red;">*</span>
                                            <input value="<%=response.email%>" autocomplete="off" type="text" id="basic-icon-default-email" class="form-control dt-email" placeholder="Email" name="email" />
                                        </div>
                                    </div>
                                    <br>
                                    
                                    <div class="row">
                                        
                                        <div class="col-lg-6">
                                            <label class="form-label" for="basic-icon-default-contact">Phone No</label><span
                                            style="color: red;">*</span>
                                            <input value="<%=response.phone%>" type="text" id="basic-icon-default-phone" class="form-control dt-contact" placeholder="Phone No" name="phone" />
                                        </div>
                                    </div>
                                    <br>
                                    <div class="row">
                                        <div class="col-lg-12">
                                            <label class="form-label" for="basic-icon-default-goverment_id">Bio</label>
                                            <textarea name="bio" id="bio" class="form-control" cols="20" rows="10"><%=response.bio%></textarea>
                                        </div>
                                      </div>
                                      <br>
                                 
                                    <br>
                                    <div class="row">
                                      

                                          <div class="d-flex">
                                            <% if (response.profile_image) { %>
                                            <a href="/uploads/user/profile_pic/<%= response.profile_image %>" target="_blank" class="me-25">
                                                <img src="/uploads/user/profile_pic/<%= response.profile_image %>" id="user-upload-img" class="uploadedAvatarUser rounded me-50" alt="profile image" style="max-width: 100px; max-height: 100px;" />
                                            </a>
                                            <% } else { %>
                                            <a href="/uploads/noImage.png" target="_blank" class="me-25">
                                                <img src="/uploads/noImage.png" id="user-upload-img" class="uploadedAvatarUser rounded me-50" alt="profile image" style="max-width: 100px; max-height: 100px;" />
                                            </a>
                                            <% } %>
                                            <!-- upload and reset button -->
                                            <div class="d-flex align-items-end mt-75 ms-1">
                                                <div>
                                                    <label for="user-upload" class="btn btn-sm btn-primary mb-75 me-75">Upload</label>
                                            <div class="d-flex">
                                                    <input type="file" name="profile_image" id="user-upload" hidden accept="image/*" />
                                            </div>
                                                    <button type="button" id="user-reset" class="btn btn-sm btn-outline-secondary mb-75 d-none">Reset</button>
                                                    <p class="mb-0">Upload image file only.</p>
                                                </div>
                                            </div>
                                            <!--/ upload and reset button -->
                                    </div>

                                    </div>
                                    <br>

                                    
                                        <input type="hidden" value="<%=response._id%>" name="id" id="user-edit-id">
                                    <button type="submit" class="btn btn-primary me-1 data-submit">Submit</button>
                                    <!-- <button type="reset" class="btn btn-outline-secondary" data-bs-dismiss="modal">Cancel</button> -->
                                  <a class="btn btn-outline-secondary"  href="<%= generateUrl('admin.user.listing')%>">Cancel</a>
                                    
                                
                                </form>
                                </div>
                            
                               
                            <!--/ form -->
                        </div>
                    </div>
                </div>
            </div>
            
        </div>
    
</div>

<script>

    let userUploadImg = $('#user-upload-img'),
        userUploadBtn = $('#user-upload'),
        userUserImage = $('.uploadedAvatarUser'),
        userResetBtn = $('#user-reset');
        if (userUserImage) {

        let resetImage = userUserImage.attr('src');
        userUploadBtn.on('change', function (e) {
            let reader = new FileReader(),
                files = e.target.files;
            reader.onload = function () {
                if (userUploadImg) {
                    userUploadImg.attr('src', reader.result);
                }
            };
            reader.readAsDataURL(files[0]);
            userResetBtn.removeClass("d-none");
        });

        userResetBtn.on('click', function () {
            userUserImage.attr('src', resetImage);
            $('#user-upload').val(null);
            userResetBtn.addClass("d-none");
            return false;
        });
    }
    
  </script>

<script>
    $("#basic-icon-default-dob").keydown((e)=>{
        e.preventDefault();
    })
</script>

